<div>
  <canvas id="transactionsChart" width="1200"></canvas>
</div>

<div>
  <canvas id="ordersChart" width="1200"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('transactionsChart');

  const config = {
    type: 'line',
    data: JSON.parse('<%- JSON.stringify(transactionsChartData) %>'),
    options: {
      responsive: true,
      plugins: {
        legend: {
          position: 'top',
        },
        title: {
          display: true,
          text: 'Revenue over time'
        },
      },
    },
  };

  new Chart(ctx, config);

  const ordersCtx = document.getElementById('ordersChart');

  const ordersConfig = {
    type: 'bar',
    data: JSON.parse('<%- JSON.stringify(ordersChartData) %>'),
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Top Selling Menu Items (Last 30 Days)'
        },
        legend: {
          display: false
        }
      },
      scales: {
        x: {
          title: {
            display: true,
            text: 'Menu Item'
          }
        },
        y: {
          title: {
            display: true,
            text: 'Quantity Sold'
          },
          beginAtZero: true
        }
      }
    }
  };

  new Chart(ordersCtx, ordersConfig);

</script>

